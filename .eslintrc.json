{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": [
    "@aldra-consulting/eslint-config-typescript-react",
    "prettier",
    "plugin:react/jsx-runtime",
    "plugin:qwik/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "parent",
          "sibling",
          "index",
          "internal",
          "object",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "@aldra-consulting/*",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@project/**",
            "group": "external",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": [
          "@aldra-consulting/*",
          "@(app|src|project)/*"
        ],
        "distinctGroup": true,
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true,
          "orderImportKind": "desc"
        }
      }
    ],
    "import/no-extraneous-dependencies": "off"
  },
  "overrides": [
    {
      "files": [
        "src/**/*"
      ],
      "env": {
        "node": true,
        "browser": true
      },
      "rules": {
        "@typescript-eslint/no-empty-interface": [
          "error",
          {
            "allowSingleExtends": true
          }
        ],
        "class-methods-use-this": [
          "error",
          {
            "enforceForClassFields": false
          }
        ],
        "react/button-has-type": "off",
        "react/no-unknown-property": "off"
      }
    },
    {
      "files": [
        "entry.ssr.tsx",
        "entry.preview.tsx"
      ],
      "rules": {
        "import/no-unresolved": "off"
      }
    },
    {
      "files": [
        "*.json"
      ],
      "plugins": [
        "json-format"
      ],
      "settings": {
        "json/json-with-comments-files": [],
        "json/sort-package-json": [
          "$schema",
          "name",
          "version",
          "description",
          "type",
          "repository",
          "homepage",
          "bugs",
          "author",
          "contributors",
          "license",
          "private",
          "engines",
          "publishConfig",
          "files",
          "main",
          "module",
          "types",
          "exports",
          "workspaces",
          "scripts",
          "dependencies",
          "peerDependencies",
          "devDependencies",
          "overrides"
        ]
      }
    }
  ]
}
